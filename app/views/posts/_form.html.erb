<%= form_for @post do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :post_type %>
    <%= f.text_field :post_type %>
  </div>

  <div class="field">
    <%= f.label :content %>
    <%= f.text_area :content %>
  </div>

  <%= f.hidden_field :public, :value => false %>

  <div class="actions">
    <%= f.submit 'Preview', :id => 'post_preview' %>
    <%= f.submit 'Post', :id => 'post_submit' %>
  </div>
<% end %>
