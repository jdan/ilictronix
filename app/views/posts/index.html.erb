<% @posts.each do |post| %>
  <section id="<%= dom_id post %>" class="post">
    <div class="date">
      <div class="month">
        <%= post.month %>
      </div>
      <div class="day">
        <%= post.day %>
      </div>
    </div>
    <div class="else">
      <header>
        <span><%= link_to post.title, post %></span>
        <a href="<%= post_path(post) %>#comments">
          <span class="right">
            <i class="icon-comment"></i>
            <span class="comments-count"><%= post.comments.count %></span>
          </span>
        </a>
      </header>
      <div class="fade-arrow"></div>
      <article>
        <%= markdown post.content %>
      </article>
    </div>
    <div class="clear"></div>
  </section>
<% end %>
