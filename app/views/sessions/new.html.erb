<h1>Log in</h1>

<%= form_tag sessions_path do %>
  <div class="field">
    <%= label_tag :username %>
    <%= text_field_tag :username %>
  </div>

  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>

  <div class="field">
    <%= label_tag :remember_me, 'Remember?' %>
    <%= check_box_tag :remember_me, 1, params[:remember_me] %>
  </div>

  <div class="actions">
    <%= submit_tag "Log in" %>
  </div>
<% end %>
